<p id="notice"><%= notice %></p>

<h1>Facts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Fact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @facts.each do |fact| %>
      <tr>
        <td><%= fact.title %></td>
          <td><p style="width: 500px; height: 500px;overflow-y: scroll; overflow-x: scroll;"><%= raw fact.body %></p></td>
        <td><%= fact.fact_id %></td>
        <td><%= link_to 'Show', show_fact_style_path(@style, fact) %></td>
        <td><%= link_to 'Edit', edit_fact_style_path(fact) %></td>
        <td><%= link_to 'Destroy', fact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

