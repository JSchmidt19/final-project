<div class="login_controls">
    <div class="mainform" style="margin-top: 10%;">
        <% if admin? %>
<h1>Nah, fam, you good</h1>
<% else %>
  <h1>Log in</h1>
  <%= form_tag(:action => 'loginsecondary') do %>
    <p>Email: <%= text_field_tag :name, nil, class: "form_box" %></p> 
    <p>Password: <%= password_field_tag :login_password, nil, class: "form_box"  %></p> 
    <%= submit_tag ("Go for it") ,  style: "width: 100px; font-size: 20px; background-color: #F77; border-color: #744;" %>
  <% end %>
</div></div>

<% end %>